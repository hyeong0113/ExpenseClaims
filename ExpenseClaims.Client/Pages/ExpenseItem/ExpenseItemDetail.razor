@if (Currency == null && Category == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudTd Class="item-field" DataLabel="Category">@Category.Name</MudTd>
    <MudTd Class="item-field" DataLabel="Payee">@Item.Payee</MudTd>
    <MudTd Class="item-field" DataLabel="Date">@Item.Date</MudTd>
    <MudTd Class="item-field" DataLabel="Description">@Item.Description</MudTd>
    <MudTd Class="item-field" DataLabel="Amount">@Item.Amount</MudTd>
    <MudTd Class="item-field" DataLabel="CurrencyCode">@Currency.Symbol</MudTd>
    <MudTd Class="item-field" DataLabel="USDAmount">@Item.UsdAmount</MudTd>
}
