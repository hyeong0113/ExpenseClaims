@if (Currency == null && Category == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudTd DataLabel="Category">@Category.Name</MudTd>
    <MudTd DataLabel="Payee">@Item.Payee</MudTd>
    <MudTd DataLabel="Date">@Item.Date</MudTd>
    <MudTd DataLabel="Description">@Item.Description</MudTd>
    <MudTd DataLabel="Amount">@Item.Amount</MudTd>
    <MudTd DataLabel="CurrencyCode">@Currency.Symbol</MudTd>
    <MudTd DataLabel="USDAmount">@Item.UsdAmount</MudTd>
}
