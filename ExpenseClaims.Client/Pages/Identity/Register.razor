@page "/register"

<h3>Register</h3>

<EditForm Model="@RegisterModel" OnValidSubmit=@OnSubmit>
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="RegisterModel.FirstName" Label="First Name" Variant="Variant.Text" Adornment="Adornment.Start" />
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="RegisterModel.LastName" Label="Last Name" Variant="Variant.Text" Adornment="Adornment.Start" />
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="RegisterModel.UserName" Label="User Name" Variant="Variant.Text" Adornment="Adornment.Start" />
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="RegisterModel.Email" Label="Email" Variant="Variant.Text" Adornment="Adornment.Start" />
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="RegisterModel.Password" Label="Password" Variant="Variant.Text" Adornment="Adornment.Start" />
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="RegisterModel.ConfirmPassword" Label="Confirm Password" Variant="Variant.Text" Adornment="Adornment.Start" />
        </MudItem>
    </MudGrid>
    <MudButton ButtonType=ButtonType.Submit Variant="Variant.Filled" Color="Color.Primary">Primary</MudButton>
</EditForm>
