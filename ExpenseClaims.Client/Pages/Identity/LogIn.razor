@page "/login"

<MudCard Style="
        width: 500px;
        height: 400px;
        margin-top: 100px;
        margin-right: auto;
        margin-bottom: 10px;
        margin-left: 380px;
        float: none;
        margin-bottom: 10px;
        border-radius: 20px">
    <MudCardHeader Style="margin: auto;">
        <CardHeaderContent>
            <MudText Typo="Typo.h4">Sing In</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <EditForm Model="@LogInModel" OnValidSubmit=@OnSubmit>
        <MudCardContent Style="margin: auto;">
            <MudGrid>
                <MudItem xs="12" sm="6" md="9">
                    <MudTextField @bind-Value="LogInModel.Email" Label="Email" Variant="Variant.Text" Adornment="Adornment.Start" Required="true" RequiredError="You should enter your email address to sing in" />
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12" sm="6" md="9">
                    <MudTextField @bind-Value="LogInModel.Password" Label="Password" Variant="Variant.Text" InputType="@InputType.Password" Adornment="Adornment.Start" Required="true" RequiredError="You should enter your password to sign in" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Style="margin: auto;">
            <MudButton ButtonType=ButtonType.Submit Variant="Variant.Filled" Color="Color.Info" @onkeypress="@Enter">Sign In</MudButton>
        </MudCardActions>
    </EditForm>
    @if (IsWrongInfo)
    {
        <MudChip Color="Color.Error" Variant="Variant.Outlined">@ErrorMessage</MudChip>
    }
</MudCard>
